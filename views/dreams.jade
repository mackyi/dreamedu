extends layout
block head
	title Dreams

block content

	.header
		.container
			.span12
				.pagetitle
					|Dreams
				.subtitle A look at the dreams of students who've partnered with DreamEdu.
	.container
		.row
			.span10.offset1
				.carousel.slide#myCarousel.dreamprofile
					ol.carousel-indicators
						li.active(data-target="#myCarousel", data-slide-to="0")
						li(data-target="#myCarousel", data-slide-to="1")
						li(data-target="#myCarousel", data-slide-to="2")
						li(data-target="#myCarousel", data-slide-to="3")
						li(data-target="#myCarousel", data-slide-to="4")
					.carousel-inner
						.item.active
							.span3
								img.img-rounded.dreamprofilepic(src="/img/GhidaElBanna.jpg")
							.span4.offset1
								.spacer
								.description Ghida El Banna
								h5 School:  
								p.indent Saida Secondary Public School for Girls, Lebanon 
								h5 Dream:
								p.indent I am the founder and the President of the Health Committee where my goal is to spread hygiene and health awareness in Lebanon, a limiting resource in my country. 
								h5 Aspirations:
								p.indent Ghida wants to be a doctor and hopes to study Biology in college. 
								h5 Accomplishments:  
								p.indent Ghida is a Hope scholar and will be funded by the Hope foundation to attend a college in the U.S for the next four years. 
						.item
							.span3
								img.img-rounded.dreamprofilepic(src="/img/TalalZarif.jpg")
							.span4.offset1
								.spacer
								.description Talal Zarif
								h5 School:  
								p.indent National Evangelical Institute for Girls and Boys, Lebanon 
								h5 Dream:
								p.indent With a partner, I plan to create an environmentally friendly and economically feasible electrical coating that can minimize the electrocution occurrences in Palestinian refugee camps.  
								h5 Aspirations:
								p.indent Talal is interested in pursuing engineering or medicine
						.item
							.span3
								img.img-rounded.dreamprofilepic(src="/img/OmarAlHassan.jpg")
							.span4.offset1
								.spacer
								.description Omar Al Hassan
								h5 School:  
								p.indent Al-Iman High School, Lebanon
								h5 Aspirations:
								p.indent I want to go into Medicine (Cardiothorasics / Optimology ) 		
						.item
							.span3
								img.img-rounded.dreamprofilepic(src="/img/HasanGhazzawi.jpg")
							.span4.offset1
								.spacer
								.description Hasan Ghazzawi
								h5 School:  
								p.indent National Evangelical Institute for Girls and Boys, Lebanon 
								h5 Dream:
								p.indent With a partner, I plan to create an environmentally friendly and economically feasible electrical coating that can minimize the electrocution occurrences in Palestinian refugee camps. 
								h5 Aspirations:
								p.indent Hasan wants to be an engineer
						.item
							.span3
								img.img-rounded.dreamprofilepic(src="/img/IbrahimBjermi.jpg")
							.span4.offset1
								.spacer
								.description Ibrahim Bjermi
								h5 School:  
								p.indent Nazareth Secondary, Lebanon
								h5 Aspirations:
								p.indent Ibrahim wants to be a doctor and study 

								

					a.carousel-control.left(href="#myCarousel", data-slide="prev") &lsaquo;

					a.carousel-control.right(href="#myCarousel", data-slide="next") &rsaquo;
		

block scripts
	script(src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.0/js/bootstrap.min.js")
	script(src="/javascript/carousel.js")