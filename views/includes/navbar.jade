.navbar.navbar-fixed-top.navbar-inverse
	.navbar-inner
		.container
			ul.nav.fixedmainnav
				li: a(href="/") Home
				li: a(href="/about") About Us
				li: a(href="/dreams") Dreams
				li: a(href="/getinvolved") Get Involved
				li: a(href="/find") Search People
			container.pull-right
				- if (typeof locals.user !== 'undefined')
					selfurl = '/user/' + locals.user.username
					a.btn.btn-primary(href=selfurl)
						i.icon-user
						|  
						| #{locals.user.username}
					a.btn.btn-inverse(href='/logout') Logout
				- else
					a.btn.btn-primary.pull-right(href="/login") Login &raquo
					a.btn.btn-inverse.pull-right#navregister(href="/register") Register &raquo