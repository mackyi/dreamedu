extends layout
block content
	.container
		.spacer
		.profilehead
			.row
				.span3
					picUrl = locals.pageof.picUrl
					img.img-polaroid(src=picUrl)
				.span8
					.row 
						.span2.pull-right
							block rating
					.row	
						.spacer
						.span5
							.pageheader
								h1 #{locals.pageof.fname} #{locals.pageof.lname} <small> (#{locals.pageof.username}) </small>
							block type
						block request
							.span2.pull-right
								h4 Request Connection?
								requesturl = '/writeRequest/' + locals.pageof.username
								a.button.btn(href=requesturl) Make Request
		.profilebody
			block profile
				include includes/basicprofile
				